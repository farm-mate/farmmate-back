{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
        // "module" : " es2015",
		"outDir": "./dist",
		"strict": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"resolveJsonModule": true,
    	"allowSyntheticDefaultImports": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
